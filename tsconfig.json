{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    "outDir": "www",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "strictPropertyInitialization" : false,
    "types": ["node"]
  },
  "include": [
    "ts-src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}